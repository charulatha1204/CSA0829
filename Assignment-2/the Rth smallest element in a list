def find_rth_smallest(lst, r):
    if r > len(lst) or r < 1:
        return "Invalid value of R"
    sorted_list = sorted(lst)
    return sorted_list[r - 1]

# Example usage
numbers = [12, 5, 7, 3, 9, 1, 15]
r = 3
result = find_rth_smallest(numbers, r)
print(f"The {r}rd smallest element is:", result)
